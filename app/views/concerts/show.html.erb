<div class="center">
  <h4><%= @concert.artist_1 %><br></h4>
  <%= @concert.artist_2 %><br>
  <%= @concert.artist_3 %><br>
  <%= @concert.artist_4 %><br>
  <%= @concert.date %><br>
  <%= @concert.time %><br>

<% if @rsvp.empty? %>
  <%= form_for [@concert, @new_rsvp] do |f| %>
    <div>
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>
    <div>
      <%= f.button "I want to go!"%>
    </div>
  <% end %>
<% else %>
  <%= "You are currently signed up to go!" %>
</div>

<%= render 'guest_list' %>

</div>
<% end %>
