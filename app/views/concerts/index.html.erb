<div class="row">
  <div class="large-6 columns large-offset-3">
    <div class="transbox2">
      <h1>
        Concerts
    <% form_tag concerts_path, method: 'get' do %>
      <%= text_field_tag :search %>
      <%= submit_tag "Search Concerts" %>
      </h1>
    <% end %>


    </div>
  </div>
</div>


<div class="row">
  <div class="large-6 columns large-offset-3">
    <div class="transbox">
      <% @concerts.each do |concert| %>
        <p>
        <%= link_to concert.artist_1, concert_path(concert.id) %><br>
        <%= concert.venue.name %><br>
        <%= concert.date %><br><br>
        </p>
      <% end %>
    </div>
  </div>
</div>
