<div class="row">
  <div class="large-6 columns large-offset-3">
    <div class="transbox2">
    <h1>
        Venues
    </h1>
      </div>
  </div>
</div>


<div class="row">
  <div class="large-6 columns large-offset-3">
    <div class="transbox">
      <% @venues.each do |venue| %>
        <p>
          <%= link_to venue.name, venue_path(venue.id) %><br>
          <%= venue.address_line_1 %><br>
          <%= venue.city %>, <%= venue.state %> <%= venue.zip %><br>
          <%= link_to "#{venue.name}'s Official Website", venue.website %><br><br>
        </p>
      <% end  %>
      <%= paginate @venues %>
    </div>
  </div>
</div>
